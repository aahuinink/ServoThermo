<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="temperatures.MainPage"
             xmlns:viewmodel="clr-namespace:temperatures.ViewModel"
             x:DataType="viewmodel:MainViewModel"
             xmlns:drawables="clr-namespace:temperatures">

    <ContentPage.Resources>
        <drawables:LineDrawable x:Key="LineDrawable"/>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <HorizontalStackLayout>
                <Label Text="Current Temp"/>
                <Label Text="{Binding CurrentTemp}"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Last Reading: "/>
                <Label Text="{Binding LastReading}"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Connection Status:"/>
                <Label Text="{Binding ConnectionStatus}"/>
            </HorizontalStackLayout>
            <GraphicsView Drawable="{StaticResource lineDrawable}"
                      x:Name="LineGraphView"
                      HeightRequest="1000"
                      WidthRequest="1100">
            </GraphicsView>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
